{
  "name": "star",
  "version": "1.0.0",
  "description": "Star HRD",
  "main": "server.js",
  "scripts": {
    "start": "node ./api/server",
    "dev": "nodemon ./api/server",
    "test": "cross-env NODE_ENV=tests nyc mocha --timeout 10000 --exit --recursive -reporter=lcov -- -R spec ./api/tests/**/*js > coverage.lcov && ./node_modules/.bin/codecov",
    "lint": "eslint ./api/ --fix --ignore-path .gitignore --ignore-pattern internals/scripts",
    "docker:test": "docker-compose -f docker-compose.yml -f docker-compose.test.yml up --abort-on-container-exit",
    "deploy": "./deploy.sh",
    "pm2:start": "pm2 start ./api/server.js",
    "pm2:stop": "pm2 stop ./api/server.js",
    "pm2:restart": "pm2 restart ./api/server.js",
    "pm2:list": "pm2 list",
    "pm2:monit": "pm2 monit"
  },
  "author": "Ahmad Rifa'i",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.4.0",
    "http-status": "^1.4.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.2",
    "morgan": "^1.9.1"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "codecov": "^3.6.5",
    "cross-env": "^7.0.0",
    "eslint": "^6.8.0",
    "mocha": "^7.0.1",
    "nodemon": "^2.0.2",
    "nyc": "^15.0.0",
    "pm2": "^4.2.3"
  }
}
